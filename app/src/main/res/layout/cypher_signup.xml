<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="180dp"
        android:hint="Email"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_userPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="88dp"
        android:hint="Password"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_email" />

    <EditText
        android:id="@+id/login_confirmPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_userPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginVertical="10dp"
        android:hint="Confirm Password"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login_btn"
        app:layout_constraintEnd_toEndOf="@+id/login_confirmPassword"
        app:layout_constraintStart_toStartOf="@+id/login_confirmPassword"
        app:layout_constraintTop_toBottomOf="@+id/login_confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="Sign Up"
        />

</androidx.constraintlayout.widget.ConstraintLayout>